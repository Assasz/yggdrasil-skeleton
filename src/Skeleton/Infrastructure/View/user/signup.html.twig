{% extends 'layout/empty.html.twig' %}

{% block title %}Sign up{% endblock %}

{% block content %}
    {% for error in flashbag('danger') %}
        <div class="alert alert-dismissible alert-primary">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <strong>Oh snap!</strong> {{ error }}
        </div>
    {% endfor %}

    <div class="col-lg-4 col-sm-6 col-xs-12">
        {{ begin_form('signup_form', path('User:signup')) }}

            <fieldset>
                <legend>Sign up to <a href="{{ path('Default:index') }}">{{ _appname }}</a></legend>

                {{ form_field('email') }}

                {{ form_field('username') }}

                <div class="form-group">
                    <label for="password">Password</label>
                    <div class="input-group">
                        <input type="password" class="form-control" id="password" name="password" placeholder="Strong password" autocomplete="off">
                        <div id="toggle-password" class="input-group-append input-group-text" data-action="showPassword">
                            <span class="fa fa-fw fa-eye" aria-hidden="true"></span>
                            <span class="offscreen">Show password</span>
                        </div>
                    </div>
                </div>

                <p class="mt-2">By clicking on "Sign up" below, you are agreeing to the <a href="#">Terms of Service</a> and the <a href="#">Privacy Policy.</a></p>
                <p class="mb-0 mt-2">Already have an account? Sign in <a href="{{ path('User:signin') }}">here!</a></p>
            </fieldset>

            {{ button('signup_button') }}

        {{ end_form() }}
    </div>
{% endblock %}

{% block js %}
    <script src="{{ asset('js/actions/signup.js') }}"></script>
{% endblock %}